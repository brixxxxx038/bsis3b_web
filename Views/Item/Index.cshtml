@model IEnumerable<bsis3b_web.Models.Item>

<div mt-3>
    <div class="row">
        <div class="col-6">
            <h2>ItemList</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" class="btn btn-primary">Add New Item</a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-hover">
    <thead>
        <tr>
        <th scope="col">Name</th>
        <th></th>
        </tr>
    </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td width="90%">@item.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
            }
            
        </tbody>
    </table>
        
    }
    else
    {
        <p>No Item Exist.</p>
    }
    
</div>